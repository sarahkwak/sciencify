{
  "manifest_version": 2,

  "name": "Sciencify",
  "description": "This extension prevent users going unscientific website and potentially redirect them to appropriate page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentscript.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "https://ajax.googleapis.com/"
  ]
}
